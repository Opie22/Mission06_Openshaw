
<!DOCTYPE html>

<h1>Movie List</h1>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Category</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
        <th>Copied to Plex</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@movie.Category</td>
            <td>@(movie.Edited.HasValue ? (movie.Edited.Value ? "Yes" : "No") : "N/A")</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
            <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
            <td>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a> |
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
